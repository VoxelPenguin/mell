{
  "name": "mell",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --ssl true",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy:prod": "./deploy-prod.sh",
    "deploy:dev": "./deploy-dev.sh",
    "lint": "ng lint",
    "si": "npm install --legacy-peer-deps",
    "hono-dev": "cd backend && tsx watch src/index.ts",
    "hono-build": "cd backend && tsc",
    "hono-start": "node backend/dist/index.js"
  },
  "private": true,
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,sass,json,md,yml,yaml,html}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/animations": "~20.1.0",
    "@angular/common": "~20.1.0",
    "@angular/compiler": "~20.1.0",
    "@angular/core": "~20.1.0",
    "@angular/forms": "~20.1.0",
    "@angular/platform-browser": "~20.1.0",
    "@angular/router": "~20.1.0",
    "@hono/node-server": "^1.19.5",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.16",
    "hono": "^4.10.4",
    "postcss": "^8.5.6",
    "primeng": "^20.2.0",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.16",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "~20.1.0",
    "@angular/cli": "~20.1.0",
    "@angular/compiler-cli": "~20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.9.2",
    "angular-eslint": "20.5.0",
    "eslint": "^9.38.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.46.1"
  }
}
