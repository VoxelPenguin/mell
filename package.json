{
  "name": "mell",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --ssl true",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy:prod": "./deploy-prod.sh",
    "deploy:dev": "./deploy-dev.sh",
    "lint": "ng lint",
    "si": "npm install --legacy-peer-deps && npm link harperdb --legacy-peer-deps",
    "build:backend": "cd backend && tsc"
  },
  "private": true,
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,sass,json,md,yml,yaml,html}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@angular/animations": "~21.0.0-rc.0",
    "@angular/common": "~21.0.0-rc.0",
    "@angular/compiler": "~21.0.0-rc.0",
    "@angular/core": "~21.0.0-rc.0",
    "@angular/forms": "~21.0.0-rc.0",
    "@angular/platform-browser": "~21.0.0-rc.0",
    "@angular/router": "~21.0.0-rc.0",
    "@google/genai": "^1.28.0",
    "@primeuix/themes": "^1.2.5",
    "@tailwindcss/postcss": "^4.1.16",
    "lucide-angular": "^0.552.0",
    "postcss": "^8.5.6",
    "primeng": "^20.3.0",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.16",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0-rc.0",
    "@angular/cli": "~21.0.0-rc.0",
    "@angular/compiler-cli": "~21.0.0-rc.0",
    "@types/node": "^24.9.2",
    "angular-eslint": "20.5.0",
    "eslint": "^9.39.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.46.2"
  }
}
